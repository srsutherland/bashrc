PURP="\[\e[38;5;99m\]"
GREEN="\[\e[92m\]"
PURP2="\[\e[38;5;69m\]"
MINT="\[\e[38;5;41m\]"
RESET="\[\e[0m\]"
BOLD="\[\e[1m\]"

export PS1="${RESET}${BOLD}${GREEN}\t${RESET}:${BOLD}${PURP}\w${RESET}\\$ "

lastcmd() { 
    LASTCMD=$(history 1 | cut -c8-) 
    WD=$(dirs +0) 
    printf "\e]0; %s : %s\a" "$LASTCMD" "$WD" > /dev/tty
}
trap 'lastcmd' DEBUG
export PROMPT_COMMAND=lastcmd
